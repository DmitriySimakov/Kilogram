<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">
    
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.dmitrysimakov.kilogram.ui.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/to_trainingsFragment"
            app:destination="@id/trainingsFragment" />
        <action
            android:id="@+id/to_chooseMuscleFragment"
            app:destination="@id/chooseMuscleFragment">
            <argument
                android:name="training_id"
                android:defaultValue="0L" />
            <argument
                android:name="program_day_id"
                android:defaultValue="0L" />
        </action>
        <action
            android:id="@+id/to_measurementsTabFragment"
            app:destination="@id/measurementsTabFragment" />
        <action
            android:id="@+id/to_programsFragment"
            app:destination="@id/programsFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/chooseMuscleFragment"
        android:name="com.dmitrysimakov.kilogram.ui.common.choose_muscle.ChooseMuscleFragment"
        android:label="@string/exercises"
        tools:layout="@layout/fragment_choose_muscle">
        <argument
            android:name="program_day_id"
            app:argType="long" />
        <argument
            android:name="training_id"
            app:argType="long" />
        <action
            android:id="@+id/to_chooseExerciseFragment"
            app:destination="@id/chooseExerciseFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/trainingsFragment"
        android:name="com.dmitrysimakov.kilogram.ui.trainings.trainings.TrainingsFragment"
        android:label="@string/training_sessions"
        tools:layout="@layout/fragment_trainings">
        <action
            android:id="@+id/to_exercisesFragment"
            app:destination="@id/exercisesFragment" >
            <argument
                android:name="program_day_id"
                android:defaultValue="0L" />
        </action>
        <action
            android:id="@+id/to_createTrainingFragment"
            app:destination="@id/createTrainingFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/createTrainingFragment"
        android:name="com.dmitrysimakov.kilogram.ui.trainings.create_training.CreateTrainingDialog"
        android:label="@string/training_session"
        tools:layout="@layout/dialog_create_training">
        <action
            android:id="@+id/to_exercisesFragment"
            app:destination="@id/exercisesFragment"
            app:popUpTo="@+id/trainingsFragment">
            <argument
                android:name="training_is_running"
                android:defaultValue="true" />
            <argument
                android:name="program_day_id"
                android:defaultValue="0L" />
        </action>
    </fragment>
    
    <fragment
        android:id="@+id/exercisesFragment"
        android:name="com.dmitrysimakov.kilogram.ui.common.exercises.ExercisesFragment"
        android:label="@string/training_session"
        tools:layout="@layout/fragment_exercises">
        <argument
            android:name="program_day_id"
            app:argType="long" />
        <argument
            android:name="training_id"
            app:argType="long" />
        <argument
            android:name="training_is_running"
            app:argType="boolean" />
        <action
            android:id="@+id/to_trainingSetsFragment"
            app:destination="@id/trainingSetsFragment" />
        <action
            android:id="@+id/to_chooseMuscleFragment"
            app:destination="@id/chooseMuscleFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/addExerciseFragment"
        android:name="com.dmitrysimakov.kilogram.ui.common.add_exercise.AddExerciseFragment"
        android:label="@string/addExercise"
        tools:layout="@layout/fragment_add_exercise">
        <argument
            android:name="exercise_id"
            app:argType="long" />
        <argument
            android:name="program_day_id"
            app:argType="long" />
        <argument
            android:name="training_id"
            app:argType="long" />
    </fragment>
    
    <fragment
        android:id="@+id/chooseExerciseFragment"
        android:name="com.dmitrysimakov.kilogram.ui.common.choose_exercise.ChooseExerciseFragment"
        android:label="@string/exercises"
        tools:layout="@layout/fragment_exercises">
        <argument
            android:name="muscle_id"
            app:argType="long" />
        <argument
            android:name="program_day_id"
            app:argType="long" />
        <argument
            android:name="training_id"
            app:argType="long" />
        <action
            android:id="@+id/to_exerciseDetailFragment"
            app:destination="@id/exerciseDetailFragment" />
        <action
            android:id="@+id/to_addExerciseFragment"
            app:destination="@id/addExerciseFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/exerciseDetailFragment"
        android:name="com.dmitrysimakov.kilogram.ui.exercises.detail.ExerciseDetailFragment"
        tools:layout="@layout/fragment_exercise_detail">
        <argument
            android:name="exercise_id"
            app:argType="long" />
    </fragment>
    
    <fragment
        android:id="@+id/measurementsTabFragment"
        android:name="com.dmitrysimakov.kilogram.ui.measurements.MeasurementsTabFragment"
        android:label="@string/measurements" />
    
    <fragment
        android:id="@+id/trainingSetsFragment"
        android:name="com.dmitrysimakov.kilogram.ui.trainings.sets.TrainingSetsFragment"
        android:label="TrainingSetsFragment"
        tools:layout="@layout/fragment_training_sets">
        <argument
            android:name="training_exercise_id"
            app:argType="long" />
        <action
            android:id="@+id/to_addSetDialog"
            app:destination="@id/addSetDialog" />
        <argument
            android:name="exercise_id"
            app:argType="long" />
    </fragment>
    
    <fragment
        android:id="@+id/addSetDialog"
        android:name="com.dmitrysimakov.kilogram.ui.trainings.add_set.AddSetDialog"
        android:label="Добавить подход"
        tools:layout="@layout/dialog_add_set">
        <argument
            android:name="training_exercise_id"
            app:argType="long" />
        <argument
            android:name="set_id"
            app:argType="long" />
    </fragment>
    
    <fragment
        android:id="@+id/programsFragment"
        android:name="com.dmitrysimakov.kilogram.ui.programs.programs.ProgramsFragment"
        android:label="Тренировочные программы"
        tools:layout="@layout/fragment_programs">
        <action
            android:id="@+id/to_createProgramDialog"
            app:destination="@id/createProgramDialog" />
        <action
            android:id="@+id/to_trainingDaysFragment"
            app:destination="@id/programDaysFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/createProgramDialog"
        android:name="com.dmitrysimakov.kilogram.ui.programs.create_program.CreateProgramDialog"
        android:label="Тренировочная программа"
        tools:layout="@layout/dialog_create_program">
        <action
            android:id="@+id/to_trainingDaysFragment"
            app:destination="@id/programDaysFragment"
            app:popUpTo="@+id/programsFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/programDaysFragment"
        android:name="com.dmitrysimakov.kilogram.ui.programs.program_days.ProgramDaysFragment"
        android:label="fragment_training_days"
        tools:layout="@layout/fragment_program_days" >
        <argument
            android:name="program_id"
            app:argType="long" />
        <action
            android:id="@+id/to_createProgramDayDialog"
            app:destination="@id/createProgramDayDialog" />
    </fragment>
    
    <fragment
        android:id="@+id/createProgramDayDialog"
        android:name="com.dmitrysimakov.kilogram.ui.programs.create_program_day.CreateProgramDayDialog"
        android:label="CreateProgramDayDialog"
        tools:layout="@layout/dialog_create_program_day" >
        <argument
            android:name="program_id"
            app:argType="long" />
        <action
            android:id="@+id/action_createProgramDayDialog_to_trainingFragment"
            app:destination="@id/exercisesFragment"
            app:popUpTo="@+id/programDaysFragment" />
    </fragment>

</navigation>