<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dmitrysimakov.kilogram.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/to_createTrainingFragment"
            app:destination="@id/createTrainingFragment" />
        <action
            android:id="@+id/to_calendarDayDialog"
            app:destination="@id/calendarDayDialog" />
    </fragment>
    <fragment
        android:id="@+id/createTrainingFragment"
        android:name="com.dmitrysimakov.kilogram.ui.home.create_training.CreateTrainingDialog"
        android:label="@string/training_session"
        tools:layout="@layout/dialog_create_training">
        <action
            android:id="@+id/to_exercisesFragment"
            app:destination="@id/trainingExercisesFragment"
            app:popUpTo="@+id/homeFragment">
        </action>
        <action
            android:id="@+id/to_chooseProgramFragment"
            app:destination="@id/trainings_ChooseProgramFragment" />
    </fragment>
    <fragment
        android:id="@+id/trainings_ChooseProgramFragment"
        android:name="com.dmitrysimakov.kilogram.ui.home.trainings.choose_program.Trainings_ChooseProgramFragment"
        android:label="@string/chooseTrainingProgram"
        tools:layout="@layout/fragment_choose_program">
        <action
            android:id="@+id/to_chooseProgramDayFragment"
            app:destination="@id/trainings_ChooseProgramDayFragment" />
    </fragment>
    <fragment
        android:id="@+id/trainings_ChooseProgramDayFragment"
        android:name="com.dmitrysimakov.kilogram.ui.home.trainings.choose_program_day.Trainings_ChooseProgramDayFragment"
        android:label="@string/chooseTrainingDay"
        tools:layout="@layout/fragment_choose_program_day">
        <argument
            android:name="program_id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/trainingExercisesFragment"
        android:name="com.dmitrysimakov.kilogram.ui.home.trainings.exercises.TrainingExercisesFragment"
        android:label="@string/training_session"
        tools:layout="@layout/fragment_exercises">
        <argument
            android:name="training_id"
            app:argType="long" />
        <argument
            android:name="training_is_running"
            app:argType="boolean" />
        <action
            android:id="@+id/to_trainingSetsFragment"
            app:destination="@id/trainingSetsFragment" />
        <action
            android:id="@+id/to_chooseExerciseFragment"
            app:destination="@id/trainings_ChooseExerciseFragment" />
    </fragment>
    <fragment
        android:id="@+id/trainings_ChooseExerciseFragment"
        android:name="com.dmitrysimakov.kilogram.ui.home.trainings.choose_exercise.Trainings_ChooseExerciseFragment"
        android:label="@string/exercises"
        tools:layout="@layout/fragment_exercises">
        <argument
            android:name="num"
            app:argType="integer" />
        <argument
            android:name="training_id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/trainingSetsFragment"
        android:name="com.dmitrysimakov.kilogram.ui.home.trainings.training_sets.TrainingSetsFragment"
        android:label="@string/sets"
        tools:layout="@layout/fragment_training_sets">
        <argument
            android:name="training_exercise_id"
            app:argType="long" />
        <action
            android:id="@+id/to_addSetDialog"
            app:destination="@id/addSetDialog" />
    </fragment>
    <fragment
        android:id="@+id/addSetDialog"
        android:name="com.dmitrysimakov.kilogram.ui.home.trainings.add_training_set.AddTrainingSetDialog"
        android:label="@string/addSet"
        tools:layout="@layout/dialog_add_training_set">
        <argument
            android:name="training_exercise_id"
            app:argType="long" />
        <argument
            android:name="set_id"
            app:argType="long" />
        <argument
            android:name="weight"
            app:argType="integer" />
        <argument
            android:name="reps"
            app:argType="integer" />
        <argument
            android:name="time"
            app:argType="integer" />
        <argument
            android:name="distance"
            app:argType="integer" />
    </fragment>
    <dialog
        android:id="@+id/calendarDayDialog"
        android:name="com.dmitrysimakov.kilogram.ui.home.calendar_day.CalendarDayDialog"
        android:label="CalendarDayDialog"
        tools:layout="@layout/dialog_calendar_day">
        <action
            android:id="@+id/to_trainingExercisesFragment"
            app:destination="@id/trainingExercisesFragment"
            app:popUpTo="@+id/homeFragment" />
        <argument
            android:name="date"
            app:argType="string" />
    </dialog>
</navigation>