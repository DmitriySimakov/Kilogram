<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    app:startDestination="@id/peopleFragment">
    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.dmitrysimakov.kilogram.ui.subscriptions.people.PeopleFragment"
        android:label="@string/people"
        tools:layout="@layout/fragment_people" >
        <action
            android:id="@+id/to_messagesFragment"
            app:destination="@id/messagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.dmitrysimakov.kilogram.ui.subscriptions.messages.MessagesFragment"
        android:label="@string/messages"
        tools:layout="@layout/fragment_messages" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
</navigation>