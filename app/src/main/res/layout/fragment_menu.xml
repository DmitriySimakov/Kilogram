<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="vm"
            type="com.dmitrysimakov.kilogram.ui.SharedViewModel"/>
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoCIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            app:imageUrl="@{vm.user.photoUrl.toString()}"
            app:invisibleUnless="@{vm.user != null}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars"/>
        
        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@{vm.user.displayName}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:invisibleUnless="@{vm.user != null}"
            app:layout_constraintStart_toEndOf="@id/photoCIV"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names"/>
    
        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@{vm.user.email}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:invisibleUnless="@{vm.user != null}"
            app:layout_constraintTop_toBottomOf="@id/usernameTV"
            app:layout_constraintStart_toEndOf="@id/photoCIV"
            tools:text="android.studio@android.com" />
    
        <ImageView
            android:id="@+id/editProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:invisibleUnless="@{vm.user != null}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/grey700"
            android:src="@drawable/ic_edit_24dp" />
        
        <Button
            android:id="@+id/authBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{vm.user != null ? @string/sign_out : @string/sign_in}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailTV"
            tools:text="@string/sign_out"/>
    
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/photoCIV"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/other" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</layout>