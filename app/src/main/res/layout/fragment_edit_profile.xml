<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="vm"
            type="com.dmitrysimakov.kilogram.ui.profile.edit_profile.EditProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/frame_padding">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:imageUrl="@{vm.user.photoUrl.toString()}"
            goneUnless="@{vm.user.photoUrl != null}"
            tools:src="@tools:sample/avatars" />
        
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="25dp"
            goneUnless="@{vm.user.photoUrl == null}"
            tools:visibility="gone"/>
        
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frame_padding"
            android:hint="@string/username">
            
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={vm.user.name}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                tools:text="@tools:sample/full_names"/>
            
        </com.google.android.material.textfield.TextInputLayout>
        
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frame_padding"
            android:text="@string/save_changes"/>
        
    </LinearLayout>
    
</layout>