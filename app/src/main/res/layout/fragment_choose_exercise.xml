<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="vm"
            type="com.dmitrysimakov.kilogram.ui.common.choose_exercise.ChooseExerciseViewModel" />
    </data>

    <com.dmitrysimakov.kilogram.util.MaterialDrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="end">
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_exercise"/>
        
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
        
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:text="@string/added_to_favorite"
                    android:checked="@={vm.addedToFavorite}"
                    style="@style/Label" />
        
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:text="@string/performed_earlier"
                    android:checked="@={vm.performedEarlier}"
                    style="@style/Label" />
                
                <TextView
                    android:text="@string/main_muscle"
                    style="@style/Label" />
                
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/musclesCG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        
                <TextView
                    android:text="@string/mechanics_type"
                    style="@style/Label" />
        
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/mechanicsTypeCG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        
                <TextView
                    android:text="@string/exercise_type"
                    style="@style/Label" />
        
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/exerciseTypeCG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        
                <TextView
                    android:text="@string/equipment"
                    style="@style/Label" />
        
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/equipmentCG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                
            </LinearLayout>
    
        </com.google.android.material.navigation.NavigationView>
    
    </com.dmitrysimakov.kilogram.util.MaterialDrawerLayout>
    
</layout>