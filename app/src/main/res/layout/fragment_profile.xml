<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="vm"
            type="com.dmitrysimakov.kilogram.ui.SharedViewModel" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/frame_padding"
            app:imageUrl="@{vm.user.photoUrl.toString()}"
            app:invisibleUnless="@{vm.user != null}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />
        
        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/frame_padding"
            android:layout_marginEnd="16dp"
            android:text="@{vm.user.displayName}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:invisibleUnless="@{vm.user != null}"
            app:layout_constraintStart_toEndOf="@id/photo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names" />
        
        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{vm.user.email}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:invisibleUnless="@{vm.user != null}"
            app:layout_constraintStart_toEndOf="@id/photo"
            app:layout_constraintTop_toBottomOf="@id/usernameTV"
            tools:text="android.studio@android.com" />
        
        <ImageView
            android:id="@+id/editProfileBtn"
            style="@style/IconButton"
            android:layout_margin="@dimen/frame_padding"
            android:src="@drawable/ic_edit"
            android:tint="@color/grey700"
            app:invisibleUnless="@{vm.user != null}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <Button
            android:id="@+id/authBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/frame_padding"
            android:text="@{vm.user != null ? @string/sign_out : @string/sign_in}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailTV"
            tools:text="@string/sign_out" />
        
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo"
            app:menu="@menu/other" />
    
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>