<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        
        <import type="com.dmitrysimakov.kilogram.binding.Converter" />
        
        <variable
            name="viewModel"
            type="com.dmitrysimakov.kilogram.ui.home.trainings.add_training_set.AddTrainingSetViewModel" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="?attr/dialogPreferredPadding">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:goneUnless="@{viewModel.measures.weight}">
            
            <ImageView
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> viewModel.decreaseWeight()}"
                android:src="@drawable/ic_remove" />
            
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:errorEnabled="true">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/weightET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/weight_kg"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:text="@={Converter.intToString(viewModel.trainingSet.weight)}"
                    app:notEmpty="@{true}" />
            
            </com.google.android.material.textfield.TextInputLayout>
            
            <ImageView
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> viewModel.increaseWeight()}"
                android:src="@drawable/ic_add" />
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:goneUnless="@{viewModel.measures.reps}">
            
            <ImageView
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> viewModel.decreaseReps()}"
                android:src="@drawable/ic_remove" />
            
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:errorEnabled="true">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/repsET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/reps"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:text="@={Converter.intToString(viewModel.trainingSet.reps)}"
                    app:notEmpty="@{true}" />
            
            </com.google.android.material.textfield.TextInputLayout>
            
            <ImageView
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> viewModel.increaseReps()}"
                android:src="@drawable/ic_add" />
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:goneUnless="@{viewModel.measures.time}">
            
            <ImageView
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> viewModel.decreaseTime()}"
                android:src="@drawable/ic_remove" />
            
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:errorEnabled="true">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/timeET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/time_sec"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:text="@={Converter.intToString(viewModel.trainingSet.time)}"
                    app:notEmpty="@{true}" />
            
            </com.google.android.material.textfield.TextInputLayout>
            
            <ImageView
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> viewModel.increaseTime()}"
                android:src="@drawable/ic_add" />
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:goneUnless="@{viewModel.measures.distance}">
            
            <ImageView
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> viewModel.decreaseDistance()}"
                android:src="@drawable/ic_remove" />
            
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:errorEnabled="true">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/distanceET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/distance_metres"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:text="@={Converter.intToString(viewModel.trainingSet.distance)}"
                    app:notEmpty="@{true}" />
            
            </com.google.android.material.textfield.TextInputLayout>
            
            <ImageView
                style="@style/IconButton"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> viewModel.increaseDistance()}"
                android:src="@drawable/ic_add" />
        
        </LinearLayout>
    
    </LinearLayout>

</layout>