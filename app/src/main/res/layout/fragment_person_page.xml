<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="vm"
            type="com.dmitrysimakov.kilogram.ui.common.person_page.PersonPageViewModel" />
    </data>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/frame_padding">
    
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frame_padding">
        
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:imageUrl="@{vm.user.photoUrl.toString()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />
        
                <TextView
                    android:id="@+id/usernameTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/frame_padding"
                    android:text="@{vm.user.name}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toEndOf="@id/photo"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@tools:sample/full_names" />
        
                <TextView
                    android:id="@+id/followers"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="@{@string/followers +`: `+ vm.user.followersCount}"
                    app:layout_constraintStart_toStartOf="@id/usernameTV"
                    app:layout_constraintEnd_toStartOf="@id/followed"
                    app:layout_constraintTop_toBottomOf="@id/usernameTV"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Подписчики 45" />
        
                <TextView
                    android:id="@+id/followed"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="@{@string/followed +`: `+ vm.user.followedCount}"
                    app:layout_constraintStart_toEndOf="@id/followers"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/usernameTV"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Подписки 24" />
    
            </androidx.constraintlayout.widget.ConstraintLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <Button
                    android:id="@+id/followBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/follow"/>
    
                <Button
                    android:id="@+id/writeMessageBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/write"/>
                
            </LinearLayout>
            
        </LinearLayout>
    
    </ScrollView>

</layout>