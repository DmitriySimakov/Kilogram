<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <import type="com.dmitrysimakov.kilogram.util.Converter"/>
        
        <variable
            name="vm"
            type="com.dmitrysimakov.kilogram.ui.MainViewModel"/>
    </data>
    
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
    
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="?attr/toolbarOverlay"/>

        </com.google.android.material.appbar.AppBarLayout>
        
        <fragment
            android:id="@+id/fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintBottom_toTopOf="@id/timer_panel"
            app:navGraph="@navigation/main"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timer_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:goneUnless="@{vm.elapsedSessionTime != null}"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@{Converter.secondsToTimeFormat(vm.elapsedSessionTime)}"
                    tools:text="32:30" />

                <View style="@style/HorizontalDivider"
                    app:invisibleUnless="@{vm.elapsedRestTime != null}"/>
                
                <TextView
                    android:id="@+id/rest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    app:invisibleUnless="@{vm.elapsedRestTime != null}"
                    android:text="@{Converter.secondsToTimeFormat(vm.elapsedRestTime)}"
                    tools:text="1:05"/>

                <View style="@style/HorizontalDivider"
                    app:invisibleUnless="@{vm.elapsedRestTime != null}"/>
                
                <TextView
                    android:id="@+id/restLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    app:invisibleUnless="@{vm.elapsedRestTime != null}"
                    android:text="@{safeUnbox(vm.restTime) - safeUnbox(vm.elapsedRestTime) > 0 ? Converter.secondsToTimeFormat(safeUnbox(vm.restTime) - safeUnbox(vm.elapsedRestTime)) : `Жги сын`}"
                    tools:text="1:55"/>
                
            </LinearLayout>
            
        </com.google.android.material.card.MaterialCardView>
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:layout_constraintBottom_toTopOf="@id/timer_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/baseline_add_white_24"/>
    
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</layout>