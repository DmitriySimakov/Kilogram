<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="vm"
            type="com.dmitrysimakov.kilogram.ui.home.HomeViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">
        
        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/startTrainingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fitness_center_24dp"
            android:tint="@color/white"
            app:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/addMeasurementButton" />
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addMeasurementButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_straighten_24dp"
            android:tint="@color/white"
            app:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/calendar"
            app:layout_constraintStart_toEndOf="@id/startTrainingButton"
            app:layout_constraintEnd_toStartOf="@id/addPhotoButton" />
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_24dp"
            android:tint="@color/white"
            app:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/calendar"
            app:layout_constraintStart_toEndOf="@id/addMeasurementButton"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <TextView
            android:id="@+id/startTrainingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/startTrainingButton"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/startTrainingButton"
            app:layout_constraintStart_toStartOf="@id/startTrainingButton"
            app:layout_constraintEnd_toEndOf="@id/startTrainingButton" />
        
        <TextView
            android:id="@+id/addMeasurementTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/addMeasurementButton"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/addMeasurementButton"
            app:layout_constraintStart_toStartOf="@id/addMeasurementButton"
            app:layout_constraintEnd_toEndOf="@id/addMeasurementButton" />
        
        <TextView
            android:id="@+id/addPhotoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/addPhotoButton"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/addPhotoButton"
            app:layout_constraintStart_toStartOf="@id/addPhotoButton"
            app:layout_constraintEnd_toEndOf="@id/addPhotoButton"/>
        
        <TextView
            android:id="@+id/photosTV"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:text="@string/photos"
            android:drawableEnd="@drawable/ic_arrow_forward_24dp"
            app:layout_constraintTop_toBottomOf="@id/startTrainingTV" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photosRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/photosTV"
            app:spanCount="3"
            tools:itemCount="3"
            tools:listitem="@layout/item_photo" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>