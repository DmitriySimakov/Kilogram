<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="vm"
            type="com.dmitrysimakov.kilogram.ui.home.trainings.training_sets.TrainingSetsViewModel" />
        
        <variable
            name="set"
            type="com.dmitrysimakov.kilogram.data.local.relation.SetWithPreviousResults" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/num"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@{set.weight != null || set.reps != null || set.time != null || set.distance != null ? @color/black : @color/grey500}"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1" />
        
        <include
            layout="@layout/progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:curr="@{set.weight}"
            app:gone="@{vm.measures.weight}"
            app:prev="@{set.prevWeight}" />
        
        <include
            layout="@layout/progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:curr="@{set.reps}"
            app:gone="@{vm.measures.reps}"
            app:prev="@{set.prevReps}" />
        
        <include
            layout="@layout/progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:curr="@{set.time}"
            app:gone="@{vm.measures.time}"
            app:prev="@{set.prevTime}" />
        
        <include
            layout="@layout/progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:curr="@{set.distance}"
            app:gone="@{vm.measures.distance}"
            app:prev="@{set.prevDistance}" />
    
    </LinearLayout>

</layout>