<resources>

    <!-- LIGHT THEME -->

    <style name="AppThemeLight" parent="BaseAppThemeLight"/>
    
    <style name="BaseAppThemeLight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>
    
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.BaseAppThemeLight.BottomSheetDialog</item>
        <item name="textInputStyle">@style/Widget.BaseAppThemeLight.TextInput</item>
        <item name="floatingActionButtonStyle">@style/Widget.BaseAppThemeLight.FloatingActionButton</item>
    </style>
    
    <style name="Widget.BaseAppThemeLight.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?android:attr/windowBackground</item>
    </style>
    
    <style name="Widget.BaseAppThemeLight.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@color/white</item>
    </style>
    
    <style name="ThemeOverlay.BaseAppThemeLight.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>
        
        <!--It is necessary to correctly resize window when keyboard appears-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!---->
    
        <item name="textInputStyle">@style/Widget.BaseAppThemeLight.TextInput</item>
    </style>
    
    <!-- DARK THEME -->
    
    <style name="AppThemeDark" parent="BaseAppThemeDark"/>
    
    <style name="BaseAppThemeDark" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.BaseAppThemeDark.BottomSheetDialog</item>
        <item name="textInputStyle">@style/Widget.BaseAppThemeLight.TextInput</item>
        <item name="floatingActionButtonStyle">@style/Widget.BaseAppThemeLight.FloatingActionButton</item>
    </style>
    
    <style name="ThemeOverlay.BaseAppThemeDark.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
    
        <!--It is necessary to correctly resize window when keyboard appears-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!---->
    
        <item name="textInputStyle">@style/Widget.BaseAppThemeLight.TextInput</item>
    </style>
    
    <!-- STYLES -->
    
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="HorizontalListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/listPreferredItemHeight</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:paddingTop">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingStart">@dimen/list_item_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/list_item_horizontal_padding</item>
    </style>
    
    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="HorizontalDivider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:padding">@dimen/icon_button_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="MonthHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="CardCaption">
        <item name="android:textSize">12sp</item>
    </style>
    
</resources>