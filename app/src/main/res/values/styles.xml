<resources>

    <!-- LIGHT THEME -->

    <style name="AppThemeLight" parent="BaseAppThemeLight"/>
    
    <style name="BaseAppThemeLight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>

        <item name="popupTheme">@style/AppThemeLight.PopupOverlay</item>
        <item name="tabBackground">@color/white</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>
    
    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    
    
    <!-- DARK THEME -->
    
    <style name="AppThemeDark" parent="BaseAppThemeDark"/>
    
    <style name="BaseAppThemeDark" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/red500</item>
        <item name="android:textColor">@color/white</item>

        <item name="popupTheme">@style/AppThemeDark.PopupOverlay</item>
        <item name="tabBackground">@color/darkBackground</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />
    
    
    <!-- STYLES -->
    
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="HorizontalListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/listPreferredItemHeight</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingStart">@dimen/list_item_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/list_item_horizontal_padding</item>
    </style>
    
    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="HorizontalDivider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:padding">@dimen/icon_button_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="MonthHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>
    
</resources>