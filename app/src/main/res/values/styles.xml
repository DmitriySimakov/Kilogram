<resources>

    <!-- LIGHT THEME -->

    <style name="AppThemeLight" parent="BaseAppThemeLight"/>
    
    <style name="BaseAppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="toolbarOverlay">@style/AppThemeLight.AppBarOverlay</item>
        <item name="popupTheme">@style/AppThemeLight.PopupOverlay</item>
        <item name="tabBackground">@color/white</item>

        <item name="android:dialogTheme">@style/DialogThemeLight</item>
        <item name="android:alertDialogTheme">@style/DialogThemeLight</item>

        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="DialogThemeLight" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/red600</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- DARK THEME -->

    <style name="BaseAppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/red500</item>
        <item name="android:textColor">@color/white</item>

        <item name="toolbarOverlay">@style/AppThemeLight.AppBarOverlay</item>
        <item name="popupTheme">@style/AppThemeDark.PopupOverlay</item>
        <item name="tabBackground">@color/darkBackground</item>
        <item name="android:dialogTheme">@style/DialogThemeDark</item>
        <item name="android:alertDialogTheme">@style/DialogThemeDark</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="AppThemeDark" parent="BaseAppThemeDark"/>

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="DialogThemeDark" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/red500</item>
        <item name="android:background">@color/darkBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="Label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="Field">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="HorizontalDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="ImageToggleButton" parent="android:Widget.Material.Button.Toggle">
        <item name="android:textOn"/>
        <item name="android:textOff"/>
    </style>

</resources>